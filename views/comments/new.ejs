<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;" id="pacifco">Share Your Thoughts On <%= restaurant.name %>!</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" id="pacifco">Submit</button>
                </div>    
            </form>
            <a href="/restaurants" id="pacifco">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>