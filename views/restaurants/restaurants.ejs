<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Foodies United!</h1>
            <p>The world's best restaurants just a few clicks away.</p>
            <p><a class="btn btn-primary btn-large" href="/restaurants/new">Share a Restaurant</a></p>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% for (i=0; i<restaurants.length; i++) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= restaurants[i].image %>">
                    <div class="caption">
                        <h4><%= restaurants[i].name %></h4>    
                    </div>
                    <p>
                        <a href="/restaurants/<%= restaurants[i]._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
    </div> 
</div>
    
<% include ../partials/footer %>